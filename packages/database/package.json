{
	"name": "@repo/database",
	"version": "0.0.0",
	"private": true,
	"main": "./dist/src/index.js",
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "swc src -d dist --source-maps",
		"db:generate": "dotenv -e ../../.env -- prisma generate",
		"db:migrate:reset": "dotenv -e ../../.env -- prisma migrate reset",
		"db:migrate:dev": "dotenv -e ../../.env -- prisma migrate dev",
		"db:migrate:deploy": "dotenv -e ../../.env.production -- prisma migrate deploy",
		"db:generate:deploy": "dotenv -e ../../.env.production -- prisma generate",
		"db:seed:dev": "dotenv -e ../../.env -- pnpx tsx src/seed.ts",
		"db:seed:production": "dotenv -e ../../.env.production -- pnpx tsx src/seed.ts",
		"clean": "rm -rf dist",
		"prune": "rm -rf node_modules"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^20.11.24",
		"@types/uuid": "^10.0.0",
		"dotenv-cli": "^7.4.2",
		"prisma": "^5.10.2",
		"tsup": "^8.0.2"
	},
	"dependencies": {
		"@faker-js/faker": "^9.0.3",
		"@prisma/client": "^5.10.2",
		"uuid": "^10.0.0"
	}
}
