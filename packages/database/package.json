{
	"name": "@repo/database",
	"version": "0.0.0",
	"private": true,
	"main": "./dist/index.js",
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsup",
		"db:generate": "dotenv -e ../../.env -- prisma generate",
		"db:migrate:reset": "dotenv -e ../../.env -- prisma migrate reset",
		"db:migrate:dev": "dotenv -e ../../.env -- prisma migrate dev",
		"db:migrate:deploy": "dotenv -e ../../.env.production -- prisma migrate deploy",
		"db:generate:deploy": "dotenv -e ../../.env.production -- prisma generate",
		"db:seed": "dotenv -e ../../.env -- pnpx tsx src/seed.ts"
	},
	"devDependencies": {
		"@repo/typescript-config": "workspace:*",
		"@types/bcrypt": "^5.0.2",
		"@types/node": "^20.11.24",
		"@types/uuid": "^10.0.0",
		"dotenv-cli": "^7.4.2",
		"prisma": "^5.10.2"
	},
	"dependencies": {
		"@faker-js/faker": "^9.0.3",
		"@prisma/client": "^5.10.2",
		"bcrypt": "^5.1.1",
		"dotenv": "^16.4.5",
		"uuid": "^10.0.0"
	}
}
